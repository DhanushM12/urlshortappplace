<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Shortner</title>
</head>
<body>
    <h1>Url Shortner App</h1>
    <form action="/shortUrls" method="post">
        <input type="url" name="fullURL" placeholder="Enter the url" required>
        <button type="submit">Shorten URL</button>
    </form>
    <br/>
    <table>
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortURLNew => { %>
                <tr>
                    <td><a href="<%= shortURLNew.full %>"><%= shortURLNew.full %></a></td>
                    <td><a href="<%= shortURLNew.short %>"><%= shortURLNew.short %></a></td>
                    <td><%= shortURLNew.clicks %></td>
                </tr>
           <% }); %>
        </tbody>
    </table>
</body>
</html>